<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    			<include
        	android:id="@+id/tool_bar"
        	layout="@layout/tool_bar"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" />
         <TextView
             android:id="@+id/textView3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView"
             android:paddingTop="5dp"
             android:text="충전하실 금액을 말씀해주세요!"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <ImageView
             android:id="@+id/person_image"
             android:layout_width="150dp"
             android:layout_height="150dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/tool_bar"
             android:layout_marginTop="102dp"
             android:contentDescription="anyStringValue"/>

         <TextView
             android:id="@+id/textView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignTop="@+id/person_image"
             android:layout_marginTop="128dp"
             android:paddingTop="20dp"
             android:text="충전용 바코드입니다."
             android:textAppearance="?android:attr/textAppearanceMedium" />
		
         <TextView
             android:id="@+id/textView4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView3"
             android:paddingTop="20dp"
             android:textSize="15sp"
             android:text="충전이 완료되시면 완료버튼을 눌러주세요"/>
         <Button
             android:id="@+id/charge_finish"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/textView4"
             android:layout_marginRight="48dp"
             android:layout_marginTop="24dp"
             android:text="충 전 완 료" />

</RelativeLayout>
